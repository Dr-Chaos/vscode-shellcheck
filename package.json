{
    "name": "shellcheck",
    "displayName": "shellcheck",
    "description": "An extension to use shellcheck in vscode",
    "version": "0.0.2",
    "publisher": "timonwong",
    "categories": [
        "Languages",
        "Linters"
    ],
    "homepage": "https://github.com/timonwong/vscode-shellcheck",
    "repository": {
        "type": "git",
        "url": "https://github.com/timonwong/vscode-shellcheck.git"
    },
    "engines": {
        "vscode": "^1.5.0"
    },
    "activationEvents": [
        "onLanguage:shellscript"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "ShellCheck",
            "properties": {
                "shellcheck.executablePath": {
                    "type": "string",
                    "default": "shellcheck",
                    "description": "Path to the shellcheck executable."
                },
                "shellcheck.run": {
                    "type": "string",
                    "enum": [
                        "onSave",
                        "onType",
                        "never"
                    ],
                    "default": "onType",
                    "description": "Whether shellcheck is run on save or on type or disabled."
                },
                "shellcheck.exclude": {
                    "type": "array",
                    "default": [],
                    "description": "Exclude types of warnings, for example [\"SC1090\"]."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}