{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "out",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "alwaysStrict": true,
        // "strict": true,
        // "strictNullChecks": true,
        "noUnusedLocals": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true
    },
    "exclude": [
        "node_modules",
        "!node_modules/@types",
        ".vscode-test"
    ]
}
